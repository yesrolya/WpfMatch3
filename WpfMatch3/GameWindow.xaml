<Window x:Class="WpfMatch3.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfMatch3"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="GameWindow" MinHeight="580" MinWidth="580">
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,0,0,-30">
        <Grid.Background>
            <ImageBrush ImageSource="Resources/wallpaper.jpg" Stretch="UniformToFill"/>
        </Grid.Background>
        <StackPanel Orientation="Vertical" Width="500" HorizontalAlignment="Center" VerticalAlignment="Center">
            <DockPanel>
                <Label DockPanel.Dock="Left" Content="00:00" Height="30" MinWidth="60"  Margin="5"/>
                <Label DockPanel.Dock="Right" Content="SCORE: 0" Height="30" MinWidth="80" Margin="5"/>
                <ProgressBar DockPanel.Dock="Top" Minimum="0" Maximum="60" Height="30" Margin="5"/>
            </DockPanel>
            <Canvas Width="500" Height="500" Button.Click ="ElementClicked" >
                <Button Canvas.Top ="50" Content="GI"/>
                <Button Canvas.Left="100" Content="GI"/>
            </Canvas>
        </StackPanel>
    </Grid>
</Window>
