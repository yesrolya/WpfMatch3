<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfMatch3"
        xmlns:Properties="clr-namespace:WpfMatch3.Properties" x:Class="WpfMatch3.MainWindow"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Game" Height="450" Width="800">

    <Grid x:Name="StartScreen" Visibility="Visible">
        <Grid.Background>
            <ImageBrush ImageSource="Resources/wallpaper.jpg" Stretch="UniformToFill"/>
        </Grid.Background>
        <Ellipse MouseLeftButtonUp="LeftUp_Play" VerticalAlignment="Center" HorizontalAlignment ="Center" MinHeight="100" MaxHeight="150" MinWidth="100" MaxWidth="150" >
            <Ellipse.Fill>
                <ImageBrush ImageSource="Resources/play_icon.png"/>
            </Ellipse.Fill>
        </Ellipse>
    </Grid>
</Window>
